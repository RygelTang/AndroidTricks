<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_chapter_1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="1-1 绘制基础"/>

        <Button
            android:id="@+id/button_chapter_1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="1-2 Paint 详解"/>

        <Button
            android:id="@+id/button_chapter_1_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="1-3 drawText() 文字的绘制"/>

        <Button
            android:id="@+id/button_chapter_1_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="1-4 Canvas 对绘制的辅助 clipXXX() 和 Matrix"/>

        <Button
            android:id="@+id/button_chapter_1_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="1-5 绘制顺序"/>

        <Button
            android:id="@+id/button_chapter_1_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="1-6：属性动画 Property Animation（上手篇）"/>

        <Button
            android:id="@+id/button_chapter_1_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="1-7：属性动画 Property Animation（进阶篇）"/>

        <Button
            android:id="@+id/button_chapter_1_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="1-8 硬件加速"/>

        <Button
            android:id="@+id/button_chapter_1_practice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="第一章练习：几何冲刺demo，Flipboard demo"/>

        <Button
            android:id="@+id/button_chapter_2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="2-1 布局基础"/>

        <Button
            android:id="@+id/button_chapter_2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="2-2 全新定义 View 的尺寸"/>

        <Button
            android:id="@+id/button_chapter_2_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="2-3 定制 Layout 的内部布局"/>

        <Button
            android:id="@+id/button_chapter_2_practice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="第二章练习：自定义标签组"/>
    </LinearLayout>
</ScrollView>
