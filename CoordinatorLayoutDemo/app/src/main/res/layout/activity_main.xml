<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_activity_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="FloatingActionButton 与 Snackbar"/>

        <Button
            android:id="@+id/button_activity_2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="scroll"/>

        <Button
            android:id="@+id/button_activity_2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="scroll|enterAlways"/>

        <Button
            android:id="@+id/button_activity_2_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="scroll|enterAlways|enterAlwaysCollapsed"/>

        <Button
            android:id="@+id/button_activity_2_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="scroll|enterAlways|exitUntilCollapsed"/>

        <Button
            android:id="@+id/button_activity_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="layout_collapseMode parallax"/>

        <Button
            android:id="@+id/button_activity_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="layout_collapseMode pin"/>

        <Button
            android:id="@+id/button_activity_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="透明状态栏"/>

        <Button
            android:id="@+id/button_activity_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="自定义 Behavior"/>
    </LinearLayout>
</ScrollView>
